<h2>Update the drone</h2>

<form method="POST" action="/drones/{{result._id}}/edit" id="create-form">
  <div class="form-group">
    <label for="droneName">Name</label>
    <input name="name" type="text" class="form-control" id="droneName" aria-describedby="emailHelp" value="{{result.name}}">
  </div>
  <div class="form-group">
    <label for="dronePropellers">Number of Propellers</label>
    <input name="propellers" type="number" class="form-control" id="dronePropellers" value="{{result.propellers}}">
  </div>
  <div class="form-group">
    <label for="droneMaxSpeed">Max Speed (in m/s)</label>
    <input name="maxSpeed" type="number" class="form-control" id="droneMaxSpeed" value="{{result.maxSpeed}}">
  </div>
  <button id="create-button" type="submit" class="btn btn-primary">Submit</button>
</form>